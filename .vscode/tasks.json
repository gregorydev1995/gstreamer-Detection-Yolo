{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ vp project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main/*.cpp",   // demo source code for vp framework
                "-lopencv_core",
                "-lopencv_videoio",
                "-lopencv_highgui",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs",
                "-lopencv_dnn",
                "-lopencv_video",
                "-lvp",  // generated already by build.sh
                "-std=c++17",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ paddle_ocr",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/third_party/paddle_ocr/main/main.cpp",  // demo source code for paddle ocr
                "-lopencv_core",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs",
                "-lopencv_highgui",
                "-lopencv_videoio",
                "-lopencv_freetype",
                "-lpaddle_ocr",  // generated already by build.sh
                "-std=c++17",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}