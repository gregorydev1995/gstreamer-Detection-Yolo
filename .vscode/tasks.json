{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe 生成活动文件",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main/*.cpp",
                "${workspaceFolder}/nodes/*.cpp",
                "${workspaceFolder}/nodes/infers/*.cpp",
                "${workspaceFolder}/nodes/osd/*.cpp",
                "${workspaceFolder}/objects/*.cpp",
                "${workspaceFolder}/objects/elements/*.cpp",
                "${workspaceFolder}/objects/shapes/*.cpp",
                "${workspaceFolder}/ba/*.cpp",
                "${workspaceFolder}/utils/analysis_board/*.cpp",
                "-lopencv_core",
                "-lopencv_videoio",
                "-lopencv_highgui",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs",
                "-lopencv_dnn",
                "-lopencv_video",
                "-lpthread",
                "-std=c++17",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-lopencv_core",
                "-lopencv_videoio",
                "-lopencv_highgui",
                "-lopencv_imgproc",
                "-lopencv_imgcodecs",
                "-std=c++17",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}